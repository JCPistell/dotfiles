[user]
	name = Colin Pistell 
    email = colin@das42.com
	credentials = cache

[branch]
    autosetupmerge = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
    autocrlf = input
    editor = vim

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset %s'
    lpo = log --pretty=oneline --abbrev-commit --graph --decorate
    es = !git pull --rebase && git push
    s = status -s -u
    d = diff --color-words
    rpull = pull --rebase --stat
    pullr = pull --rebase --stat

[merge]
    tool = vimdiff

[credential]
	helper = cache --timeout=43200
    user=namabile
[branch "*branch-name*"]
	rebase = true
